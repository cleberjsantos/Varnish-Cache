varnishtest "Test disabling inline C code"

server s1 {
	rxreq
	txresp
} -start

varnish v1 

varnish v1 -cliok "param.show vcc_allow_inline_c"

varnish v1 -vcl+backend {
	C{ getpid(); }C
} 

varnish v1 -cliok "param.set vcc_allow_inline_c false"

varnish v1 -badvcl {
	backend default {
		.host = "${s1_sock}";
	}
	C{ getpid(); }C
}

varnish v1 -badvcl {
	backend default {
		.host = "${s1_sock}";
	}
	sub vcl_recv {
		C{ getpid(); }C
	}
}

varnish v1 -cliok "param.set vcc_allow_inline_c true"

varnish v1 -vcl+backend {
	sub vcl_recv {
		C{ getpid(); }C
	}
}

varnish v1 -vcl+backend {
	C{ extern int getpid(); }C
}

varnish v1 -start

client c1 {
	txreq
	rxresp
} -run
